{
  "compilerOptions": {
    "outFile": "./dist/bundle.js", // Path to the single output file
    "module": "none", // Use 'none' for a single file output
    "moduleResolution": "node", // Resolve modules using Node.js resolution strategy
    "target": "es6", // or any other ECMAScript target version
    "sourceMap": true // Optional: to generate source maps
  },
  "include": ["src/**/*"], // Path to your TypeScript files
  "exclude": ["node_modules"] // Exclude node_modules folder
}
