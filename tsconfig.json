{
  "compilerOptions": {
    "target": "es2016",                  
    "module": "commonjs",              
    "moduleResolution": "node",       // Resolve modules in Node.js style
    "outDir": "./dist",               // Output compiled files to 'dist'
    "esModuleInterop": true,          // Enable compatibility for CommonJS and ES Module imports
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
